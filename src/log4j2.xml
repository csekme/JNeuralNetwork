<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
 <ThresholdFilter level="all"/>
 <Appenders>
      
   <Console name="STDOUT" target="SYSTEM_OUT">
     <PatternLayout pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
   </Console>
   
  
   <RollingFile name="NeuralNetwork" fileName="logs/NeuralNetwork-${date:yyyy-MM-dd}.log" filePattern="logs/NeuralNetwork-%d{yyyy-MM-dd}-%i.log"
                 ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d{yyyy.MM.dd HH:mm:ss.} %m%n</Pattern>
      </PatternLayout>
      <OnStartupTriggeringPolicy />
   </RollingFile>
   
 </Appenders>
 
 <Loggers>
 
    <Logger name="NeuralNetwork" level="all" additivity="false">
      <AppenderRef ref="NeuralNetwork" level="all"/>
    </Logger>
 
   <Root level="all">
     <AppenderRef ref="STDOUT" level="trace"  /> 
   </Root>
   
   
 </Loggers>
</Configuration>